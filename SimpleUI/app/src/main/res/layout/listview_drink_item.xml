<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Drink Name"
        android:id="@+id/drinkNameTextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:id="@+id/unchange1"
        android:layout_below="@+id/drinkNameTextView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mPrice"
        android:id="@+id/mPriceTextView"
        android:layout_below="@+id/drinkNameTextView"
        android:layout_toRightOf="@+id/unchange1"
        android:layout_toEndOf="@+id/unchange1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:id="@+id/unchange2"
        android:layout_alignTop="@+id/mPriceTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lPrice"
        android:id="@+id/lPriceTextView"
        android:layout_below="@+id/drinkNameTextView"
        android:layout_toRightOf="@+id/unchange2"
        android:layout_toEndOf="@+id/unchange2" />

</RelativeLayout>